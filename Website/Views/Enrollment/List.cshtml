@model IEnumerable<Website.Models.Enrollment>
@{
  ViewBag.Title = "Index";
}
<div class="content">
  <h2>Lijst</h2>
  <table>
    <tr>
      <th></th>
      <th>Naam</th>
      <th>E-mail</th>
      <th>School</th>
      <th>FacebookID</th>
      <th>
      </th>
    </tr>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          <img src="http://graph.facebook.com/@Html.DisplayFor(modelItem => item.FacebookID)/picture" />
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.FirstName)
          @Html.DisplayFor(modelItem => item.MiddleName)
          @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.School)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.FacebookID)
        </td>
        <td>
          @Html.ActionLink("Aanpassen", "Edit", new { id = item.EnrollmentID }) <br />
          @Html.ActionLink("Details", "Details", new { id = item.EnrollmentID }) <br />
          @Html.ActionLink("Verwijderen", "Delete", new { id = item.EnrollmentID })
        </td>
      </tr>
    }
  </table>
</div>
